<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fineart_ds.ChinhSachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#C7AF85"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImgBackCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_shape" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/rubik"
            android:padding="5dp"
            android:text="Chính sách"
            android:textColor="#000"
            android:alpha="0.87"
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mTvChinhSach"
            android:layout_width="0dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chính sách"
            android:textColor="@color/colorBack"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:gravity="center"
            android:id="@+id/mTvDoiTra"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Đổi trả"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mTvDamBao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Đảm bảo"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/mTvVanChuyen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="Vận chuyển"
            android:textSize="15sp"
            android:textStyle="italic" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/mTvShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
