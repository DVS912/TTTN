<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_radius_20"
    android:layout_gravity="center"
    android:layout_height="wrap_content">



    <TextView
        android:text="Xác nhận thông tin"
        android:textSize="20sp"
        android:textColor="#000"
        android:fontFamily="@font/rubik"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mEdtTenKhach"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Tên khách hàng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mEdtDiaChi"
        android:layout_marginTop="10dp"
        android:hint="Địa chỉ"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mEdtSDT"
        android:layout_marginTop="10dp"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/mEdtTenHang"
        android:layout_marginTop="10dp"
        android:hint="Tên sản phẩm"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Số lượng"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/mBtnTru"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:id="@+id/mEdtSoluong"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/mBtnCong"
            android:layout_marginLeft="10dp"
            android:background="#fff"
            android:text="+"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Hủy"
            />
        <Button
            android:id="@+id/buttonXacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận" />

    </LinearLayout>

</LinearLayout>