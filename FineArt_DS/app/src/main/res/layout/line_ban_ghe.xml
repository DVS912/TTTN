<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:id="@+id/imageViewBanGhe"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textViewBanGhe"
                    android:text="Tên sp"
                    android:textColor="#11B119"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:maxLines="1"
                    android:fontFamily="@font/rubik"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewGiaBanGhe"
                    android:text="Giá sp"
                    android:layout_margin="5dp"
                    android:textColor="#CF5C26"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:fontFamily="@font/rubik"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewMoTaBanGhe"
                    android:text="Mô tả sp"
                    android:layout_margin="5dp"
                    android:textColor="#613838"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:fontFamily="@font/rubik"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>