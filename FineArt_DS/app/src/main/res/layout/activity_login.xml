<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#B5E7E2"
    tools:context="com.example.fineart_ds.activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/editTextTaiKhoan"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tài khoản"
        />

    <EditText
        android:textSize="20sp"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        />

    <TextView
        android:id="@+id/textViewQuenMK"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textStyle="italic"
        android:paddingLeft="10dp"
        />
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/mCbSave"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Lưu tài khoản"
        android:layout_width="0dp"
        android:checked="true"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnXacNhan"
        android:layout_gravity="center"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/textViewDangKy"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:layout_marginBottom="10dp"
            android:textColor="#2413da"
            />
    </LinearLayout>


</LinearLayout>
